ЗАДАНИЕ № 1 
#include <iostream>
using namespace std;
int main() {
    float a, b;
    setlocale(LC_ALL, "Russian");
    cout << "Введите стороны прямоугольника";
    cin >> a >> b;
    cout << "S = " << a * b << " " << "P = " << 2 * a + 2 * b;
    return 0;
}
ЗАДНИЕ 2
#include <iostream>
using namespace std;
int main() {
    float d;
    setlocale(LC_ALL, "Russian");
    cout << "Введите диаметр";
    cin >> d;
    cout << "L = " << 3.14 * d;
    return 0;
}
ЗАДАНИЕ 3
#include <iostream>
using namespace std;
int main() {
    float a, b;
    setlocale(LC_ALL, "Russian");
    cout << "Введите числа";
    cin >> a >> b;
    cout << "Среднее арифметическое = " << (a + b) / 2;
    return 0;
}
Задание 4
#include <iostream>
using namespace std;
int main() {
    float a, b;
    setlocale(LC_ALL, "Russian");
    cout << "Введите числа";
    cin >> a >> b;
    cout << "Сумма = " << a + b << " Разность = " << a - b << " Произведение = " << a * b << " Частное = " << pow(a,2) / pow(b,2);
    return 0;
}
Задание 5
#include <iostream>
using namespace std;
int main() {
    float a, b;
    setlocale(LC_ALL, "Russian");
    cout << "Введите числа";
    cin >> a >> b;
    cout << "Сумма = " << a + b << " Разность = " << a - b << " Произведение = " << a * b << " Частное модулей = " << abs(a) / abs(b);
    return 0;
}
